data "yandex_compute_image" "ubuntu_image4" {
  family = "ubuntu-2004-lts"
}
 
resource "yandex_compute_instance" "vm-test4" {
  name = "test4"
 
  resources {
    cores  = 4
    memory = 8
  }
 
  boot_disk {
    initialize_params {
      image_id = data.yandex_compute_image.ubuntu_image.id
    }
  }
 
  network_interface {
    subnet_id = yandex_vpc_subnet.subnet_terraform.id
    nat       = true
  }
 
  metadata = {
    user-data = "${file("./meta.yml")}"
  }

resource "yandex_vpc_network" "network_terraform4" {
  name = "net_terraform"
}

resource "yandex_vpc_subnet" "subnet_terraform4" {
  name           = "sub_terraform"
  zone           = "ru-central1-a"
  network_id     = yandex_vpc_network.network_terraform.id
  v4_cidr_blocks = ["192.168.15.0/24"]
}


